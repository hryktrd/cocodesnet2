= form_for @play_kind do |f|
  - if @play_kind.errors.any?
    #error_explanation
      %h2= "#{pluralize(@play_kind.errors.count, "error")} prohibited this play_kind from being saved:"
      %ul
        - @play_kind.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :kind
    = f.text_field :kind
  .actions
    = f.submit 'Save'
