%p
  %b Name:
  = @shop_info.name
%p
  %b Address:
  = @shop_info.address
%p
  %b Url:
  = @shop_info.url
%p
  %b Lat:
  = @shop_info.lat
%p
  %b Lng:
  = @shop_info.lng
%p
  %b Tel:
  = @shop_info.tel
%p
  %b Min Price:
  = @shop_info.min_price
%p
  %b Max Price:
  = @shop_info.max_price
%p
  %b Shop category:
  = @shop_category.category
%p
