<h1>Listing shop_categories</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_categories.each do |shop_category| %>
      <tr>
        <td><%= shop_category.category %></td>
        <td><%= link_to 'Show', shop_category %></td>
        <td><%= link_to 'Edit', edit_shop_category_path(shop_category) %></td>
        <td><%= link_to 'Destroy', shop_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop category', new_shop_category_path %>
